<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="pixfwdOuterDisk2.xml" eval="true">
  <Constant name="AnchorZ"              value="2.0*mm"/>

  <Constant name="OuterRingRMax"        value="167.5*mm"/>
  <Constant name="OuterRingRMin"        value="[OuterRingRMax]-2.1*mm"/>
  <Constant name="OuterRingCFRMin"      value="[OuterRingRMax]"/>
  <Constant name="OuterRingCFRMax"      value="[OuterRingCFRMin]+0.5*mm"/>
  <Constant name="OuterRingHalfWidth"   value="15.0*mm"/>
  <Constant name="OuterRingZ"           value="[AnchorZ] + 11.7*mm"/>

  <Constant name="InnerRingRMax"        value="90.085*mm"/>
  <Constant name="InnerRingRMin"        value="[InnerRingRMax]-2.5*mm"/>
  <Constant name="InnerRingCFRMax"      value="[InnerRingRMin]"/>
  <Constant name="InnerRingCFRMin"      value="[InnerRingCFRMax]-0.5*mm"/>
  <Constant name="InnerRingHalfWidth"   value="11.25*mm"/>
  <Constant name="InnerRingZ"           value="[AnchorZ] + 13.5*mm"/>

  <Constant name="InnerRingPhiStart"     value="  4.5*deg"/><!-- same as in Algorithm -->
  <Constant name="InnerRingPhiEnd"       value="174.0*deg"/><!-- same as in Algorithm -->
  <Constant name="InnerRingTubsCount"    value="40" />
  <Constant name="InnerRingSegmentDPhi"  value="([InnerRingPhiEnd]-[InnerRingPhiStart])/[InnerRingTubsCount]" />

  <Constant name="OuterRingPhiStart"     value="  3.3*deg"/><!-- same as in Algorithm -->
  <Constant name="OuterRingPhiEnd"       value="177.0*deg"/><!-- same as in Algorithm -->
  <Constant name="OuterRingTubsCount"    value="40" />
  <Constant name="OuterRingSegmentDPhi"  value="([OuterRingPhiEnd]-[OuterRingPhiStart])/[OuterRingTubsCount]" />

</ConstantsSection>

<!-- Blades -->

<Algorithm name="track:DDPixFwdDiskAlgo">
  <rParent name="pixfwdDisks:PixelForwardDisk2"/>
  <String  name="ChildName"        value="pixfwdblade2:PixelForwardBlade"/> 
  <Numeric name="StartCopyNo"      value="22"/>
  <Numeric name="NumberOfBlades"   value="17"/>
  <Numeric name="BladeAngle"       value="20*deg"/>
  <Numeric name="BladeTilt"        value="0*deg"/>
  <Numeric name="BladeCommonZ"     value="[AnchorZ] + 0*mm"/> <!--1.5*mm--><!-- -3.75*mm-->
  <Vector name="BladeZShift" type="numeric" nEntries="17">
   25.381*mm, 22.881*mm, 20.381*mm, 17.881*mm, 15.381*mm, 12.881*mm, 10.381*mm, 7.881*mm,
   25.381*mm, 22.881*mm, 20.381*mm, 17.881*mm, 15.381*mm, 12.881*mm, 10.381*mm, 7.881*mm, 3.381*mm
  </Vector>
  <Numeric name="AnchorRadius"     value="127.5*mm"/>
  <String  name="RotationName"     value="pixfwdOuterDisk2:PixOuter"/>
  <String  name="FlagString"       value="YYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYY"/>
</Algorithm>

<!-- Support rings -->

<SolidSection label="pixfwdOuterDisk2.xml">
  <Tubs name="PixelForwardInnerRingSegment1"  startPhi="-[InnerRingSegmentDPhi]/2.0" deltaPhi="[InnerRingSegmentDPhi]"
        rMin="[InnerRingRMin]" rMax="[InnerRingRMax]" dz="[InnerRingHalfWidth]"/>
  <Tubs name="PixelForwardInnerRingCFSegment1"  startPhi="-[InnerRingSegmentDPhi]/2.0" deltaPhi="[InnerRingSegmentDPhi]"
        rMin="[InnerRingCFRMin]" rMax="[InnerRingCFRMax]" dz="[InnerRingHalfWidth]"/>

  <Tubs name="PixelForwardOuterRingSegment1"  startPhi="-[OuterRingSegmentDPhi]/2.0" deltaPhi="[OuterRingSegmentDPhi]"
        rMin="[OuterRingRMin]" rMax="[OuterRingRMax]" dz="[OuterRingHalfWidth]"/>
  <Tubs name="PixelForwardOuterRingCFSegment1"  startPhi="-[OuterRingSegmentDPhi]/2.0" deltaPhi="[OuterRingSegmentDPhi]"
        rMin="[OuterRingCFRMin]" rMax="[OuterRingCFRMax]" dz="[OuterRingHalfWidth]"/>

</SolidSection>

<LogicalPartSection label="pixfwdOuterDisk2.xml">
 <LogicalPart name="PixelForwardInnerRingSegment1" category="support">
  <rSolid name="PixelForwardInnerRingSegment1"/>
  <rMaterial name="materials:C_C_InnerInnerRing"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardInnerRingCFSegment1" category="support">
  <rSolid name="PixelForwardInnerRingCFSegment1"/>
  <rMaterial name="materials:FPix_CFSkin_InnerInnerRing"/>
 </LogicalPart>

 <LogicalPart name="PixelForwardOuterRingSegment1" category="support">
  <rSolid name="PixelForwardOuterRingSegment1"/>
  <rMaterial name="materials:C_C_InnerOuterRing"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardOuterRingCFSegment1" category="support">
  <rSolid name="PixelForwardOuterRingCFSegment1"/>
  <rMaterial name="materials:FPix_CFSkin_InnerOuterRing"/>
 </LogicalPart>

</LogicalPartSection>

<Algorithm name="track:DDPixFwdSupportRing">
  <rParent name="pixfwdDisks:PixelForwardDisk2"/>
  <String  name="Child1Name"       value="pixfwdOuterDisk2:PixelForwardInnerRingSegment1"/>
  <String  name="Child2Name"       value="pixfwdOuterDisk2:PixelForwardInnerRingCFSegment1"/>
  <Numeric name="StartCopyNo"      value="0"/>
  <Numeric name="Count"            value="[InnerRingTubsCount]"/>
  <Numeric name="AnchorZ"          value="[InnerRingZ]"/>
  <Vector name="Angle" type="numeric" nEntries="8">
    4.5*deg, 20.0*deg, 52.0*deg, 73.0*deg, 88.0*deg, 101.0*deg, 117.0*deg, 174.0*deg
  </Vector>

  <Vector name="ZPos" type="numeric" nEntries="8">
    8.873*mm, 8.698*mm, 0.722*mm, -0.166*mm, 7.776*mm, 9.849*mm, 8.058*mm, -8.826*mm
  </Vector>
  <Numeric name="CreateBothHalves" value="1"/>
  <String  name="RotationName"    value="pixfwdOuterDisk2:InnerRingSegment"/>
</Algorithm>

<Algorithm name="track:DDPixFwdSupportRing">
  <rParent name="pixfwdDisks:PixelForwardDisk2"/>
  <String  name="Child1Name"       value="pixfwdOuterDisk2:PixelForwardOuterRingSegment1"/>
  <String  name="Child2Name"       value="pixfwdOuterDisk2:PixelForwardOuterRingCFSegment1"/>
  <Numeric name="StartCopyNo"      value="0"/>
  <Numeric name="Count"            value="[OuterRingTubsCount]"/>
  <Numeric name="AnchorZ"          value="[OuterRingZ]"/>
  <Vector name="Angle" type="numeric" nEntries="8">
    3.3*deg, 28.0*deg, 70.0*deg, 81.25*deg, 94.0*deg, 122.2*deg, 171.0*deg, 177.0*deg
  </Vector>
  <Vector name="ZPos" type="numeric" nEntries="8">
    8.159*mm, 5.777*mm, -2.185*mm, -2.587*mm, 7.800*mm, 5.512*mm, -6.161*mm, -4.738*mm
  </Vector>
  <Numeric name="CreateBothHalves" value="1"/>
  <String  name="RotationName"    value="pixfwdOuterDisk2:OuterRingSegment"/>
</Algorithm>


</DDDefinition>
