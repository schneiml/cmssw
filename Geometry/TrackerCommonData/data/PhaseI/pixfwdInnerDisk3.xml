  </PosPart>
  <PosPart copyNumber="2">
    <rParent name="pixfwdDisks:PixelForwardDisk3"/>
    <rChild name="pixfwdInnerDisk3:PixelForwardInnerRingCFEndSegment3"/>
    <Translation x="0.0*mm" y="0.0*mm" z="[InnerRingZ] + [EndSegmentSide2Z] + [EndSegment3Width]/2."/>
